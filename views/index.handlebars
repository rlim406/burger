<h1>Burgers</h1>

<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <h2>BURGER MENU</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devour=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-lg-6">
      <h2>EATEN BURGERS</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devour=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="newB">Burger Name:</label>
    <input type="text" id="newB" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>