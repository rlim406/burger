<div id="main">

  <div class="container">
    <div class="row">
      <div class="col-lg-12"></div>
      <img src="/assets/css/burger.jpg" alt="burger" width="300px" height="300px" class="center-block">
      <h1 id="welcome">Welcome! Choose your Burger!</h1>
    </div>
  </div>



  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        <h2>BURGER MENU</h2>
        <ul>
          {{#each burgers}}
          {{#unless devoured}}
          {{> burgers/burger-block devour=true}}
          <br>
          {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-lg-4">
        <h2>EATEN BURGERS</h2>
        <ul>
          {{#each burgers}}
          {{#if devoured}}
          {{> burgers/burger-block devour=false}}
          <br>
          {{/if}}
          {{/each}}
        </ul>
      </div>


      <div class="col-lg-4">
        <h2>MAKE YOUR OWN BURGER!</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="newB">Burger Name:</label>
            <input type="text" id="newB" name="name">
          </div>


          <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>





</div>